<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/anchor"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    tools:context="com.example.nikhil.tempo.MainActivity">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/appNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_gravity="left"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="16sp"
            android:paddingLeft="16sp"
            android:paddingTop="16sp"
            android:text="Tempo"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20sp" />

        <Switch
            android:id="@+id/moodSwitch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="0.3"
            android:paddingRight="12dp"
            android:text="Mood"
            android:textAlignment="center"
            android:textOff="sad"
            android:textOn="excited"
            android:thumb="@drawable/excited"
            android:trackTint="@android:color/black" />

    </LinearLayout>

    <TextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="21dp"
        android:paddingBottom="5sp"
        android:paddingLeft="16sp"
        android:inputType="textPersonName"
        android:text="We detect" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:textSize="21dp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:id="@+id/weatherText"
            android:text="weather" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:textSize="21dp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:id="@+id/activityText"
            android:text="activity" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/locationText"
            android:text="location" />

    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/default_album_art" />

            <Button
                android:id="@+id/trigger_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="PLAY" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#fff"
                android:text="Song Name"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/songText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Artist Name"
                android:textColor="#fff"
                android:textSize="14dp"
                android:id="@+id/artistText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Upload"
                android:text="Upload"
                android:layout_gravity="center"/>

        </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>
